<Window x:Class="ST10442835_PROG6221_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity ChatBot" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ChatPanel" />
        </ScrollViewer>

        <DockPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBox Name="UserInputBox" Width="600" Height="30" Margin="0,0,10,0"/>
            <Button Name="SendButton" Width="100" Height="30" Content="Send" Click="SendButton_Click"/>
        </DockPanel>
        
        
    </Grid>
</Window>
